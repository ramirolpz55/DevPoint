<div class="row" id="companies">
    <div class="col-xs-12">
        <h1> Portfolio</h1>
    </div>
</div>
<br>
<!-- Trigger the modal with a button -->
<div class="row">
    {{#each projects}}
    <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2 button-for-jemma" style="font: center;" data-id="{{this.id}}">
        <h3>{{this.name}}</h3> {{!--
        <button type="button" class="btn btn-secondary btn-lg" data-toggle="modal" data-target="#myModal"><img src="https://openclipart.org/image/2400px/svg_to_png/177482/ProfilePlaceholderSuit.png" width="100" height="100">
        </button> --}}
        <img src="http://www.freeiconspng.com/uploads/project-icon-28.png" width="100" height="100" style="padding: 5px;">
        <br>
        <br>
        <br>

    </div>
    {{/each}}
</div>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">

                </h4>
            </div>
            <div class="modal-body">
                <h2>Overview:</h2>
                <h5 id="description"></h5>
                <br>
                <h5 id="github"></h5>
                <br>
                <h5 id="video"></h5>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
{{#section 'script'}}
<script type="text/javascript">
$('.row').on("click", ".button-for-jemma", function() {
    var projectId = $(this).attr("data-id");
    $.ajax({
        url: '/api/projectById/' + projectId,
        method: 'GET'
    }).done(function(response) {
        $('#myModal').modal("show");
        console.log(response[0].name);

        $(".modal-title").text(response[0].name);
        $("#description").text(response[0].description);
        $('#github').text(response[0].linkGitHub);
        $('#video').text(response[0].linkLiveDemo);
    });

});
</script>
{{/section}}
